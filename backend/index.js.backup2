// MongoDB connection configuration
const MONGODB_URI = process.env.MONGODB_URI || 'mongodb://localhost:27017/jules-style';

// MongoDB connection options optimized for Atlas M10
const mongooseOptions = {
  maxPoolSize: 20, // Increased for M10 - can handle more connections
  serverSelectionTimeoutMS: 5000, // Slightly higher for reliability
  socketTimeoutMS: 10000, // Increased for complex queries
  bufferCommands: false, // Disable mongoose buffering
  retryWrites: true, // Enable retry writes for M10 reliability
  w: 1, // Write concern
  // Retry settings
  retryReads: true, // Enable retry reads for M10 reliability
  // SSL settings for production
  ssl: process.env.NODE_ENV === 'production',
  // Authentication settings
  authSource: 'admin',
  // Timeout settings
  connectTimeoutMS: 10000, // Increased for M10
  // Heartbeat settings
  heartbeatFrequencyMS: 10000, // Increased for M10
  // Additional M10 optimizations
  maxIdleTimeMS: 30000, // Keep connections alive longer
  minPoolSize: 5, // Maintain minimum connections
};

// Function to connect to MongoDB with retry logic
async function connectToMongoDB() {
  const maxRetries = 3; // Allow retries for reliability
  let retryCount = 0;

  while (retryCount < maxRetries) {
    try {
      logInfo(`Attempting to connect to MongoDB (attempt ${retryCount + 1}/${maxRetries})`);
      
      // Add a timeout to the connection attempt
      const connectionPromise = mongoose.connect(MONGODB_URI, mongooseOptions);
      const timeoutPromise = new Promise((_, reject) => 
        setTimeout(() => reject(new Error('Connection timeout')), 15000)
      );
      
      await Promise.race([connectionPromise, timeoutPromise]);
      
      logInfo('Successfully connected to MongoDB', {
        poolSize: mongooseOptions.maxPoolSize,
        database: MONGODB_URI.split('/').pop().split('?')[0]
      });
      
      // Set up connection event listeners
      mongoose.connection.on('error', (err) => {
        logError('MongoDB connection error', err);
      });

      mongoose.connection.on('disconnected', () => {
        logWarn('MongoDB disconnected');
      });

      mongoose.connection.on('reconnected', () => {
        logInfo('MongoDB reconnected');
      });

      return true;
    } catch (error) {
      retryCount++;
      logError(`MongoDB connection attempt ${retryCount} failed`, error);
      
      if (retryCount < maxRetries) {
        const delay = 1000; // Fixed delay instead of exponential backoff
        logInfo(`Retrying in ${delay}ms...`);
        await new Promise(resolve => setTimeout(resolve, delay));
      } else {
        logError('Failed to connect to MongoDB after all retry attempts');
        logWarn('Server will start without database connection - some features may be limited');
        return false;
      }
    }
  }
}

// Graceful shutdown function
async function gracefulShutdown(signal) {
  logInfo(`Received ${signal}. Starting graceful shutdown...`);
  
  try {
    // Close cache connection
    await closeCache();
    
    // Close MongoDB connection
    if (mongoose.connection.readyState === 1) {
      logInfo('Closing MongoDB connection...');
      await mongoose.connection.close();
      logInfo('MongoDB connection closed');
    }
    
    // Close server
    if (server) {
      logInfo('Closing HTTP server...');
      server.close(() => {
        logInfo('HTTP server closed');
        process.exit(0);
      });
      
      // Force exit after 10 seconds
      setTimeout(() => {
        logError('Forced shutdown after timeout');
        process.exit(1);
      }, 10000);
    } else {
      process.exit(0);
    }
  } catch (error) {
    logError('Error during graceful shutdown', error);
    process.exit(1);
  }
}

