# Jules Dating Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4002
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3002,https://dating.juleslabs.com

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/jules_dating

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:4002/api/auth/google/callback
FRONTEND_URL=http://localhost:3002

# Google Custom Search API (for product recommendations)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# Pinterest API Configuration (for style inspiration)
PINTEREST_CLIENT_ID=your_pinterest_client_id_here
PINTEREST_CLIENT_SECRET=your_pinterest_client_secret_here
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token_here
PINTEREST_REFRESH_TOKEN=your_pinterest_refresh_token_here
PINTEREST_REDIRECT_URI=http://localhost:4002/api/auth/pinterest/callback

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_MAX_AGE=24*60*60*1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3002,https://dating.juleslabs.com

# Logging
LOG_LEVEL=debug
LOG_FILE=backend.log

# Image Search API (for style inspiration)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
PEXELS_API_KEY=your_pexels_api_key_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Vector Database (for future style guide embeddings)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=jules-style-embeddings

# Product Search APIs (for future integration)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_STORE_URL=your_shopify_store_url_here

# Email Service (Gmail SMTP)
GMAIL_USER=steve@juleslabs.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here
# Note: Gmail App Password is different from your regular password
# Generate one at: https://myaccount.google.com/apppasswords

# Redis Configuration (for caching)
REDIS_URL=your_redis_connection_url_here
# Example: redis://username:password@host:port
# For Redis Cloud: redis://default:password@redis-12345.c123.us-east-1-1.ec2.cloud.redislabs.com:12345

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Segment Analytics
SEGMENT_WRITE_KEY=your_segment_write_key_here