# Jules Style Backend Environment Variables

# Server Configuration
PORT=4001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/jules-style

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Google OAuth (if needed later)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Redis Configuration (for caching)
REDIS_URL=your_redis_connection_url_here

# Analytics Configuration
FEATURE_ANALYTICS=false
ANALYTICS_DRY_RUN=true
ANALYTICS_SAMPLE_MAP={}
ANALYTICS_SCHEMA_VERSION=2025-08-29.v1

# Segment Analytics - Combined Source
SEGMENT_WRITE_KEY=<Jules_Dating_Write_Key>
FEATURE_ANALYTICS=true